#!/bin/bash
# Universal: Stage all changes
# Works in any Git repository directory

if [ ! -d ".git" ]; then
    echo "❌ Not in a Git repository!"
    exit 1
fi

REPO_NAME=$(basename "$(pwd)")
echo "📁 Staging all changes in: $REPO_NAME"

git add .
echo "✅ All changes staged!"
echo "💡 Next: git commit -m \"Your message\" or use repo-save"